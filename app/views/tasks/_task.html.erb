<tr>
  <th>
    <% if task.done %>
      <s><%= task.title %></s>
    <% else %>
      <%= task.title %>
    <% end %>
  </th>
  <td>
    <ul>
      <% task.tags.each do |tag| %>
        <li>
            <p><%= tag.name %></p>
        </li>
      <% end %>
    </ul>
  </td>
  <td>
    <%= task.desc %>
  </td>
  <td>
    <%= link_to edit_task_path(task), class: "btn btn-primary" do %>
      <%= fa_icon "edit" %>
    <% end %>
    <% unless task.done %>
      <%= link_to done_task_path(task), class: "btn btn-success", method: :post do %>
        <span>Mark as done </span><%= fa_icon "check" %>
      <% end %>
    <% else %>
      <%= link_to undone_task_path(task), class: "btn btn-warning", method: :post do %>
        <span>Mark as undone </span><%= fa_icon "times" %>
      <% end %>
    <% end %>
    <%= link_to task, method: :delete,
      data: { confirm: "You sure?" }, class: "btn btn-danger" do %>
      <%= fa_icon "trash" %>
    <% end %>
  </td>
</tr>