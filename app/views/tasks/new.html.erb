<h1>Create new task</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.fields_for :tags do |tag| %>
        <%= tag.label :name %>
        <%= tag.text_field :name %>
      <% end %>

      <%= f.submit "Create task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>